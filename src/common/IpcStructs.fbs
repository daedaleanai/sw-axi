
namespace sw_axi.wire;

enum Type:byte {
  SYSTEM_INFO,
  IP_INFO,
  IP_ACK,
  ACK,
  ERROR,
  COMMIT
}

enum IpType:byte {
  SLAVE,
  SLAVE_LITE,
  SLAVE_STREAM,
  MASTER,
  MASTER_LITE,
  MASTER_STREAM
}

enum ImplementationType:byte {
  SOFTWARE,
  HARDWARE
}

table SystemInfo {
  name:string;
  systemName:string;
  pid:ulong;
  hostname:string;
}

table IpInfo {
  name:string;
  address:ulong;
  size:ulong;
  firstInterrupt:ushort;
  numInterrupts:ushort;
  type:IpType;
  implementation:ImplementationType;
}

table Message {
  type:Type;
  systemInfo:SystemInfo;
  ipInfo:IpInfo;
  ipId:ulong;
  errorMessage:string;
}

root_type Message;
